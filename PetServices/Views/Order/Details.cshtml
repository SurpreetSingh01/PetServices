@model PetServices.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2>📦 Order #@Model.OrderId</h2>
        <p class="text-muted">Placed on @Model.OrderDate.ToString("dd MMM yyyy")</p>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <p><strong>User ID:</strong> @Model.UserId</p>
            <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
        </div>
        <div class="col-md-6 text-md-end">
            <p>
                <strong>Status:</strong>
                <span class="badge @(Model.PaymentStatus == "Paid" ? "bg-success" : "bg-warning text-dark")">
                    @Model.PaymentStatus
                </span>
            </p>
        </div>
    </div>

    <h4>🧾 Ordered Services</h4>
    <div class="table-responsive">
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr class="text-center">
                    <th>Service</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr class="text-center">
                        <td>@item.Service?.ServiceName</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@(item.UnitPrice * item.Quantity).ToString("C")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="table-light text-end">
                    <td colspan="3"><strong>Grand Total:</strong></td>
                    <td class="text-center"><strong>@Model.TotalAmount.ToString("C")</strong></td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Order" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to All Orders
        </a>
    </div>
</div>
