@model PetServices.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-5">
    <h2 class="mb-3">Order #@Model.OrderId Details</h2>

    <p><strong>User:</strong> @Model.UserId</p>
    <p><strong>Date:</strong> @Model.OrderDate.ToString("dd MMM yyyy")</p>
    <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
    <p><strong>Status:</strong> <span class="badge @(Model.PaymentStatus == "Paid" ? "bg-success" : "bg-warning")">@Model.PaymentStatus</span></p>

    <hr />

    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Service</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Service.ServiceName</td>
                    <td>$@item.UnitPrice</td>
                    <td>@item.Quantity</td>
                    <td>$@(item.UnitPrice * item.Quantity)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>Grand Total:</strong></td>
                <td><strong>$@Model.TotalAmount</strong></td>
            </tr>
        </tfoot>
    </table>

    <a asp-controller="Order" asp-action="Index" class="btn btn-secondary mt-3">
        <i class="bi bi-arrow-left"></i> Back to Orders
    </a>
</div>
