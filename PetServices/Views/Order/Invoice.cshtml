@model PetServices.Models.Order
@{
    Layout = "~/Views/Shared/_PdfLayout.cshtml";
    ViewData["Title"] = "Invoice";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        font-size: 14px;
        color: #333;
        background-color: #fff;
    }

    .header {
        text-align: center;
        border-bottom: 3px solid #007bff;
        padding-bottom: 10px;
        margin-bottom: 25px;
    }

        .header h3 {
            margin-bottom: 5px;
            font-size: 28px;
            color: #007bff;
        }

        .header p {
            margin: 2px;
            font-size: 13px;
        }

    h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #343a40;
    }

    h4 {
        margin-top: 40px;
        color: #343a40;
    }

    .info-block {
        margin-bottom: 25px;
        line-height: 1.6;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    th {
        background-color: #f0f8ff;
        padding: 10px;
        text-align: left;
        border-bottom: 2px solid #dee2e6;
    }

    td {
        padding: 10px;
        border-bottom: 1px solid #eee;
    }

        td:nth-child(3),
        td:nth-child(4),
        th:nth-child(3),
        th:nth-child(4) {
            text-align: right;
        }

        td:nth-child(2),
        th:nth-child(2) {
            text-align: center;
        }

    .summary {
        margin-top: 20px;
        text-align: right;
        font-size: 16px;
        font-weight: bold;
        color: #007bff;
    }

    .footer {
        margin-top: 50px;
        text-align: center;
        font-style: italic;
        font-size: 13px;
        color: #888;
    }
</style>

<div class="header">
    <h3>🐾 PetServices</h3>
    <p>Owned by Surpreet Singh &amp; Diljot Singh</p>
    <p>Email: support@petservices.com | Phone: +64 123 456 789</p>
</div>

<h2>🧾 Invoice</h2>

<div class="info-block">
    <p><strong>Order ID:</strong> @Model.OrderId</p>
    <p><strong>Date:</strong> @Model.OrderDate.ToString("dd MMM yyyy")</p>
    <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
    <p><strong>Status:</strong> @Model.PaymentStatus</p>
</div>

<h4>Services Summary</h4>
<table>
    <thead>
        <tr>
            <th>Service</th>
            <th>Quantity</th>
            <th>Unit Price (NZD)</th>
            <th>Total (NZD)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Service?.ServiceName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@((item.Quantity * item.UnitPrice).ToString("C"))</td>
            </tr>
        }
    </tbody>
</table>

<div class="summary">
    Grand Total: @Model.TotalAmount.ToString("C")
</div>

<div class="footer">
    Thank you for choosing PetServices! 🐶🐱 <br />
    We’re proud to serve your furry companions.
</div>
