@model IEnumerable<PetServices.Models.Service>

<h1>Services</h1>

<p>
    <a href="@Url.Action("Create", "Services")" class="btn btn-primary">Create New Service</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Service Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Duration</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.ServiceName</td>
                <td>@service.Description</td>
                <td>@service.Price</td>
                <td>@service.DurationInMinutes</td>
                <td>
                    <a href="@Url.Action("Details", "Services", new { id = service.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", "Services", new { id = service.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Services", new { id = service.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
