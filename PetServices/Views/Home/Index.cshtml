@{
    ViewData["Title"] = "Welcome to PetServices";
}

<!-- Add Bootstrap Icons + Animate.css in _Layout.cshtml HEAD if not done -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #fdfbfb 0%, #ebedee 100%);
        background-attachment: fixed;
    }

    .fade-in-up {
        animation: fadeInUp 1s ease-in-out both;
    }

   @@keyframes fadeInUp {
        0% {
            transform: translateY(40px);
            opacity: 0;
        }
        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .hover-card:hover {
        transform: scale(1.05);
        transition: all 0.3s ease-in-out;
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
    }
</style>

<div class="container my-5">
    <!-- Welcome Section -->
    <div class="row align-items-center text-center text-md-start mb-5 fade-in-up">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold text-primary">Welcome to PetServices</h1>
            <p class="lead text-muted">We care for your pets. Book grooming, walking, training, and more with ease!</p>
            <a class="btn btn-lg btn-success mt-3 shadow-lg" asp-controller="Service" asp-action="Index">
                🐾 View Available Services
            </a>
        </div>
        <div class="col-md-6 text-center">
            <img src="https://cdn-icons-png.flaticon.com/512/616/616408.png" width="200" class="img-fluid animate__animated animate__bounceIn" alt="Pet Icon" />
        </div>
    </div>

    <!-- Why Choose Us -->
    <div class="text-center mb-4 fade-in-up">
        <h2 class="fw-bold">Why Choose Us?</h2>
        <p class="text-muted">We offer professional, reliable, and affordable services for your furry friends.</p>
    </div>

    <div class="row g-4 fade-in-up">
        <div class="col-md-4">
            <div class="card h-100 hover-card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-person-check display-4 text-primary"></i>
                    <h5 class="mt-3 fw-bold">Experienced Professionals</h5>
                    <p class="text-muted">Our team is made up of pet lovers and experts in the field.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 hover-card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-currency-dollar display-4 text-success"></i>
                    <h5 class="mt-3 fw-bold">Affordable Prices</h5>
                    <p class="text-muted">We provide top-notch services at competitive prices.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 hover-card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-heart-fill display-4 text-danger"></i>
                    <h5 class="mt-3 fw-bold">100% Pet Satisfaction</h5>
                    <p class="text-muted">Your pet's happiness is our top priority!</p>
                </div>
            </div>
        </div>
    </div>
</div>
