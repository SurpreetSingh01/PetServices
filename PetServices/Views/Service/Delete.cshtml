@model PetServices.Models.Service

@{
    ViewData["Title"] = "Delete Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">⚠️ Confirm Deletion</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger mb-3">Are you sure you want to delete this service?</h5>

                    <dl class="row">
                        <dt class="col-sm-4">Service Name:</dt>
                        <dd class="col-sm-8">@Model.ServiceName</dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Price:</dt>
                        <dd class="col-sm-8">$@Model.Price</dd>

                        <dt class="col-sm-4">Duration:</dt>
                        <dd class="col-sm-8">@Model.DurationInMinutes mins</dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="text-center my-3">
                            <img src="@Model.ImageUrl" alt="Service Image" class="img-thumbnail" style="max-height: 200px;" />
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="text-center mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-trash-fill"></i> Yes, Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
